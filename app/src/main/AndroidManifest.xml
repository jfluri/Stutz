<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="stutz.mobi.ch.stutz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StutzStart"
            android:label="Stutz Start"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="stutz.mobi.ch.stutz.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectSpende"
            android:label="@string/title_activity_select_spende"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="stutz.mobi.ch.stutz.select_spende" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Danke"
            android:label="@string/title_activity_danke"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="stutz.mobi.ch.stutz.DANKE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>